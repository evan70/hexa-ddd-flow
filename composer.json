{
    "name": "slim4/hexagonal-architecture",
    "description": "Hexagonal architecture with Slim 4, SQLite, Twig, Ramsey UUID, TailwindCSS and GSAP",
    "type": "project",
    "license": "MIT",

    "require": {
        "php": "^8.3",
        "bryanjhv/slim-session": "^4.1",
        "php-di/php-di": "^7.0",
        "ramsey/uuid": "^4.7",
        "slim/csrf": "^1.5",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.11",
        "slim/twig-view": "^3.3"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "init-db": "./bin/init-db.sh",
        "dev": "./dev.sh",
        "build": "pnpm build",
        "watch": "pnpm watch",
        "test": "phpunit",
        "test:verbose": "phpunit --verbose --testdox --colors=always",
        "test:coverage": "phpunit --coverage-html coverage",
        "test:unit": "phpunit --testsuite=Unit --verbose --testdox --colors=always",
        "test:integration": "phpunit --testsuite=Integration --verbose --testdox --colors=always",
        "test:all": "./bin/run-tests.sh",
        "phpstan": "phpstan analyse src --level=5",
        "cs": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src",
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@init-db"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
