{% extends "layout.twig" %}

{% block title %}{{ user.username }} - MarkCMS{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-200">Detail používateľa</h1>
        <div>
            <a href="/mark/users/{{ user.id }}/edit" class="btn btn-primary mr-2">Upraviť</a>
            <button onclick="if(confirm('Naozaj chcete vymazať tohto používateľa?')) { fetch('/api/users/{{ user.id }}', {method: 'DELETE'}).then(() => window.location.href = '/mark/users'); }" 
                    class="btn btn-danger">
                Vymazať
            </button>
        </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden transition-theme">
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <h2 class="text-xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Základné informácie</h2>
                    
                    <div class="space-y-4">
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Používateľské meno</h3>
                            <p class="mt-1 text-lg text-gray-900 dark:text-gray-100">{{ user.username }}</p>
                        </div>
                        
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Email</h3>
                            <p class="mt-1 text-lg text-gray-900 dark:text-gray-100">{{ user.email }}</p>
                        </div>
                        
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Rola</h3>
                            <p class="mt-1">
                                <span class="px-2 py-1 text-sm font-semibold rounded-full bg-green-100 dark:bg-green-800 text-green-800 dark:text-green-100">
                                    {{ user.role }}
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
                
                <div>
                    <h2 class="text-xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Časové údaje</h2>
                    
                    <div class="space-y-4">
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Vytvorené</h3>
                            <p class="mt-1 text-lg text-gray-900 dark:text-gray-100">{{ user.created_at|date("d.m.Y H:i") }}</p>
                        </div>
                        
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Aktualizované</h3>
                            <p class="mt-1 text-lg text-gray-900 dark:text-gray-100">{{ user.updated_at|date("d.m.Y H:i") }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-6">
        <a href="/mark/users" class="text-primary hover:text-primary-dark">&larr; Späť na zoznam používateľov</a>
    </div>
</div>
{% endblock %}
