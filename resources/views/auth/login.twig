{% extends "layout.twig" %}

{% block title %}Prihlásenie{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto">
        <h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-200">Prihlásenie</h1>

        {% if error %}
        <div class="bg-red-100 dark:bg-red-900 border border-red-400 dark:border-red-700 text-red-700 dark:text-red-300 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{ error }}</span>
        </div>
        {% endif %}

        <form method="POST" action="/login" class="bg-white dark:bg-gray-800 shadow-md rounded px-8 pt-6 pb-8 mb-4 transition-theme">
            {% set csrf_token = csrf.generate() %}
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
            <!-- Debug info -->
            <div class="mb-4 p-2 bg-gray-100 dark:bg-gray-700 rounded text-xs">
                <p>CSRF Token: {{ csrf_token }}</p>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2" for="email">
                    Email
                </label>
                <input class="shadow appearance-none border dark:border-gray-600 rounded w-full py-2 px-3 text-gray-700 dark:text-gray-200 dark:bg-gray-700 leading-tight focus:outline-none focus:shadow-outline transition-theme"
                    id="email"
                    type="email"
                    name="email"
                    placeholder="Email"
                    required>
            </div>
            <div class="mb-6">
                <label class="block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2" for="password">
                    Heslo
                </label>
                <input class="shadow appearance-none border dark:border-gray-600 rounded w-full py-2 px-3 text-gray-700 dark:text-gray-200 dark:bg-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline transition-theme"
                    id="password"
                    type="password"
                    name="password"
                    placeholder="******************"
                    required>
            </div>
            <div class="flex items-center justify-between">
                <button class="btn btn-primary"
                    type="submit">
                    Prihlásiť sa
                </button>
            </div>
        </form>
        <p class="text-center text-gray-500 dark:text-gray-400 text-xs transition-theme">
            &copy; 2023 Slim 4 Demo. Všetky práva vyhradené.
        </p>
    </div>
</div>
{% endblock %}
